{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"label": "npm run build",
			"script": "build",
			"problemMatcher": [
				{
					"owner": "typescript",
					"fileLocation": "relative",
					"pattern": {
						"regexp": "^(?:\\[1] )([\\w\\/.]*)(\\([\\d,]*\\)).+(TS\\d+): (.+)$",
						"file": 1,
						"location": 2,
						"severity": 3,
						"code": 4,
						"message": 5
					}
				},
				{
					"owner": "svelte",
					"fileLocation": "relative",
					"pattern": {
						"regexp": ""
					}
				}
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always"
			}
		},
		{
			"type": "npm",
			"label": "npm run lint",
			"script": "lint",
