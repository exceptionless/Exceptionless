{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "label": "npm run build",
            "script": "build",
            "problemMatcher": [
                {
                    "owner": "vite-plugin-svelte",
                    "fileLocation": "absolute",
                    "pattern": {
                        "regexp": "^.*\\[vite-plugin-svelte\\] (.*):(\\d+):(\\d+) (.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "message": 4
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "done$"
                    }
                }
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            }
        },
