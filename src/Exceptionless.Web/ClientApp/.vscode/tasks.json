{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"label": "npm run dev",
			"script": "dev",
			"isBackground": true,
			"problemMatcher": [
				{
					"owner": "typescript",
					"fileLocation": "relative",
					"pattern": {
						"regexp": "^(?:\\[1] )([\\w\\/.]*)(\\([\\d,]*\\)).+(TS\\d+): (.+)$",
						"file": 1,
						"location": 2,
						"severity": 3,
						"code": 4,
						"message": 5
					},
					"background": {
						"activeOnStart": true,
						"beginsPattern": ".",
						"endsPattern": "\\d+:\\d+:\\d+"
					}
				},
				{
					"owner": "svelte",
					"fileLocation": "relative",
					"pattern": {
						"regexp": ""
					},
					"background": {
						"activeOnStart": true,
						"beginsPattern": ".",
						"endsPattern": "created"
					}
				}
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "never"
			}
		},
		{
			"type": "npm",
			"label": "npm install",
			"script": "install",
			"problemMatcher": []
		}
	]
}
